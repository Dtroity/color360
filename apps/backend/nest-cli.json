{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "**/*.hbs",
      {
        "include": "database/migrations/**/*",
        "outDir": "dist/database/migrations"
      },
      {
        "include": "database/seeds/**/*",
        "outDir": "dist/database/seeds"
      }
    ]
  }
}
